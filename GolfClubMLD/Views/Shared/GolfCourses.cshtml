@model IEnumerable<GolfClubMLD.Models.GolfCourseBO>
@using GolfClubMLD.Models
<form asp-controller="Home" asp-action="Index" method="get">
    <input type="text" name="SearchString" />
    <input type="submit" value="Pretrazi">
</form>
<form asp-controller="Home" asp-action="Index" method="get">
    <select name="SearchString">
        @{
            var courseTypes = (List<CourseTypeBO>)ViewData["types"];
            foreach (var ct in courseTypes)
            {
                <option value="@ct.Id">@ct.Name</option>
            }
        }
    </select>
    <input type="submit" value="Tip">
</form>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PicUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CorTypId)
        </th>
        <th></th>
    </tr>
    @if (Model != null)
    {
        foreach (var item in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PicUrl)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Price)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CourseType.Name)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
    </td>
</tr>
        }
    }
    else
    {
        <p>Nema terena</p>
    }
</table>
